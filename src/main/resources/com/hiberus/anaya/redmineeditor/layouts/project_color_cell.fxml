<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListCell?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<fx:root prefHeight="35.0" type="ListCell" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hiberus.anaya.redmineeditor.components.ProjectColorCell">
    <graphic>
        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308">
            <Label maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" text="Regex:" HBox.hgrow="NEVER">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <padding>
                    <Insets right="5.0"/>
                </padding>
            </Label>
            <TextField fx:id="regexTxt" onAction="#onChange" HBox.hgrow="ALWAYS"/>
            <Label layoutX="12.0" layoutY="16.0" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" text="Color:" HBox.hgrow="NEVER">
                <padding>
                    <Insets left="10.0" right="5.0"/>
                </padding>
            </Label>
            <ColorPicker fx:id="colorPicker" onAction="#onChange" minWidth="-Infinity" HBox.hgrow="NEVER">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </ColorPicker>
            <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#remove" text="Remove" HBox.hgrow="NEVER"/>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
        </HBox>
    </graphic>
</fx:root>
